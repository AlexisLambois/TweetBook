<Context path="/TweetBook" privileged="true" reloadable="true" >
  <Manager pathname="" />

   <!-- Definition du pool -->
  <Resource name="da2i" auth="Container" type="javax.sql.DataSource"
  maxActive="4" maxIdle="4" maxWait="3000"
  username="lamboisa" password="moi" driverClassName="org.postgresql.Driver"
  url="jdbc:postgresql://psqlserv/da2i" />

  <!-- Definition du Realm via le pool -->

  <Realm  className="org.apache.catalina.realm.DataSourceRealm" debug="99"
           dataSourceName="da2i" localDataSource="true"
           userTable="comptes" userNameCol="login" userCredCol="password"  />


  <!-- Definition d'une valve d'acces -->
  <Valve className="org.apache.catalina.valves.AccessLogValve"
           prefix="tweetbook_access1." suffix=".txt"
           pattern="common"/>
  
</Context>
